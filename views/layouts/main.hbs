<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>DRIVER</title>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import normalize.css-->
    <link type="text/css" rel="stylesheet" href="/assets/stylesheets/normalize.css"/>
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/assets/stylesheets/materialize.min.css"  media="screen,projection"/>
    <!--Import style.css-->
    <link type="text/css" rel="stylesheet" href="/assets/stylesheets/style.css"/>
    {{#if active.liveMap}}
      <!--Let browser know website is optimized for mobile-->
      <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no'/>
      <link href='https://api.mapbox.com/mapbox.js/v2.4.0/mapbox.css' rel='stylesheet'/>
      <link href='https://api.mapbox.com/mapbox.js/plugins/leaflet-fullscreen/v1.0.1/leaflet.fullscreen.css' rel='stylesheet'/>
      <link href='https://api.mapbox.com/mapbox.js/plugins/leaflet-label/v0.2.1/leaflet.label.css' rel='stylesheet'/>
      <link href='https://api.mapbox.com/mapbox.js/plugins/leaflet-minimap/v1.0.0/Control.MiniMap.css' rel='stylesheet' />
    {{else}}
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    {{/if}}
  </head>
  <body>
    <header>
      <nav>
        <div class="nav-wrapper teal lighten-1">
          <a href="home" class="brand-logo left {{#if active.home}}active{{/if}}">DRIVER</a>
          <ul class="nav-list left">
            <li><a id="live-map-btn" class="{{#if active.liveMap}}active{{/if}}" href="live_map">LIVE MAP</a></li>
            <li><a id="alerts-btn" class="{{#if active.alerts}}active{{/if}}" href="alerts">ALERTS</a></li>
            <li><a id="about-btn" class="{{#if active.about}}active{{/if}}" href="about">ABOUT</a></li>
          </ul>
          <ul class="right">
            <li><a id="login-btn" class="{{#if active.login}}active{{/if}}" href="login"><i class="material-icons left">perm_identity</i>LOGIN</a></li>
          </ul>
        </div>
      </nav>
    </header>
    <main>
      {{{body}}}
    </main>
    <footer class="page-footer teal lighten-1">
      <div class="footer-copyright center-align">&copy; 2016 Copyright Text</div>
    </footer>
    <script type="text/javascript" src="/assets/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/assets/javascripts/materialize.min.js"></script>
    <script type="text/javascript" src="/assets/javascripts/main.js"></script>
    {{#if active.liveMap}}
      <script src='https://api.mapbox.com/mapbox.js/v2.4.0/mapbox.js'></script>
      <script src='https://api.mapbox.com/mapbox.js/plugins/leaflet-fullscreen/v1.0.1/Leaflet.fullscreen.min.js'></script>
      <script src='https://api.mapbox.com/mapbox.js/plugins/leaflet-label/v0.2.1/leaflet.label.js'></script>
      <script src='https://api.mapbox.com/mapbox.js/plugins/leaflet-minimap/v1.0.0/Control.MiniMap.js'></script>
      <script type="text/javascript" src="/assets/javascripts/liveMap.js"></script>
    {{/if}}
    {{#if active.login}}
      <script type="text/javascript" src="/assets/javascripts/login.js"></script>
    {{/if}}
  </body>
</html>
